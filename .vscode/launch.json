{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug lobby-server with Nx",
      "runtimeExecutable": "pnpm",
      "runtimeArgs": [
        "nx",
        "serve",
        "lobby-server"
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "sourceMaps": true,
      "outFiles": [
        "${workspaceFolder}/lobby-server/dist/**/*.(m|c|)js",
        "!**/node_modules/**"
      ]
    }
  ]
}